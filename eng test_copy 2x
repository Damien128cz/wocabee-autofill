function napovezWocabee() {
  const question = document.querySelector('#q_word')?.innerText?.trim().toLowerCase();
  let el = document.getElementById('napovedaWoca');

  if (!el) {
    el = document.createElement('div');
    el.id = 'napovedaWoca';
    el.style.position = 'fixed';
    el.style.bottom = '20px';
    el.style.left = '20px';
    el.style.background = '#222';
    el.style.color = 'lime';
    el.style.padding = '10px 20px';
    el.style.fontSize = '24px';
    el.style.fontWeight = 'bold';
    el.style.zIndex = 9999;
    el.style.borderRadius = '10px';
    document.body.appendChild(el);
  }

  if (question) {
    const answer = slovicka[question];
    if (answer) {
      el.textContent = `üëâ Odpovƒõƒè: ${answer}`;
    } else {
      el.textContent = `‚ùì P≈ôeklad nezn√°m: ${question}`;
    }
  } else {
    el.textContent = `üïí ƒåek√°m na ot√°zku...`;
  }
}

setInterval(napovezWocabee, 1000);
